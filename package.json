{
  "name": "api-pen",
  "version": "1.0.0",
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/onwuvic/api-pen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:onwuvic/api-pen.git"
  },
  "homepage": "https://github.com/onwuvic/api-pen#readme",
  "author": "Onwuzor Victor <victor.onwuzor@andela.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build-server",
    "build-server": "babel src --config-file ./babel.config.js --out-dir dist/src --copy-files --ignore node_modules",
    "clean": "rm -rf dist && mkdir dist",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:rollback": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:rollmigrate": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "lint": "node_modules/.bin/eslint ./src",
    "lint:fix": "npm run lint --fix",
    "serve": "node dist/src/index.js",
    "start": "cross-env NODE_ENV=production npm run build && npm run serve",
    "start:dev": "cross-env NODE_ENV=development  DEBUG=log  nodemon --exec babel-node src/index.js",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "5.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.1.0",
    "supertest": "^3.4.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/__tests__/**/*.js?(x)"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js"
    ],
    "testEnvironment": "node"
  }
}
